<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mapper.BMapper">
	
	<select id="selectAll" resultType="com.java.dto.Board">
		select * from board order by bno desc
	</select>
	
	<insert id="insertBoard">
		<selectKey resultType="int" keyProperty="bno" order="BEFORE">
			select board_seq.nextval from dual		
		</selectKey>
		insert into board values(#{bno},#{id},#{btitle},#{bcontent},sysdate,0,board_seq.currval,0,0,'')
	</insert>
	
	<select id="selectOne" resultType="com.java.dto.Board">
		select * from board where bno=#{bno}
	</select>
	
	<insert id="insertGallery">
		insert into gallerylist values(
		#{galContentId},#{galContentTypeId},#{galTitle},#{galWebImageUrl},#{galCreatedtime},#{galModifiedtime},
	#{galPhotographyMonth},#{galPhotographyLocation},#{galPhotographer},#{galSearchKeyword}
		)
		
	</insert>
	
	
</mapper>